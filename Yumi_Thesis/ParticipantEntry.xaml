<Window x:Class="Yumi_Thesis.ParticipantEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yumi_Thesis"
        Background="LightBlue"
        mc:Ignorable="d"
        Title="ParticipantEntry" Height="198.8" Width="453.6">
    <Grid>
        <TextBlock Text="Please Enter Your Name" Margin="0,20" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <TextBox x:Name="ResponseTextBox" TextAlignment="Center" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" TextChanged="ResponseTextBox_TextChanged"  Height="38" Width="341" />
        <Button x:Name="AcceptInput" HorizontalAlignment="Center" Content="Enter" Click="Button_Click" Margin="0,25"  Width="139" Height="33" VerticalAlignment="Bottom" />
    </Grid>
</Window>
